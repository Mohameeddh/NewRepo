<Window x:Class="PresentationsLager.Sammanfattning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationsLager"
        mc:Ignorable="d"
        Title="Sammanfattning" Height="950" Width="800">
    <Grid>
        <StackPanel Margin="20,20,20,10">
            <TextBlock Text="Ange böcker/kurslitteraturer:" Margin="0,0,0,5" />
            <TextBox x:Name="txtKurslitteratur" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Ange kapitel i kurslitteraturen:" Margin="0,0,0,5" />
            <TextBox x:Name="txtKapitel" Width="200" Margin="0,0,0,10"/>

            <TextBlock Text="Välj årskurs:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtÅrskurs" Width="200"/>

            <TextBlock Text="Ange ålder:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtÅlder" Width="200"/>

            <Button Content="Generera Sammanfattning" Click="GenereraSammanfattning_Click" Width="150" Margin="0,20,0,0"/>

            <TextBlock Text="Sammanfattning:" Margin="0,20,0,5"/>
            <TextBox x:Name="txtGenereradSammanfattning" Width="755" Height="524" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"/>
        </StackPanel>
    </Grid>
</Window>
